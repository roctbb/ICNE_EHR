@model WebApplication2.Models.MyViewModel
@using WebApplication2.Models
@using (Html.BeginForm("Create", "Files", FormMethod.Post, new { id = "FilesDateCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.visitID)
    @Html.HiddenFor(model => model.num)
    @Html.HiddenFor(model => model.pacientID)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">



        <div class="form-group">
            <div class="col-md-4">
                @Html.DisplayNameFor(model => model.initialDate)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.initialDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">
                <a onclick="PostFileDateForm('Files', @Model.pacientID, true)" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-11">
                @Html.TextBoxFor(model => model.File, new { @class = "form-control", id = "NewFile", type = "file" })
                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })</div>
        </div>
    </div>
    <hr>
}
